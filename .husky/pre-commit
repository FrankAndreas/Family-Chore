#!/bin/sh

echo "ğŸ” Running pre-commit checks..."

# Frontend lint
echo "ğŸ“‹ Frontend ESLint..."
cd frontend && npm run lint || exit 1

# Frontend TypeScript
echo "ğŸ“‹ Frontend TypeScript..."
npx tsc --noEmit || exit 1

# Backend flake8
echo "ğŸ Backend flake8..."
cd .. && ./venv/bin/python -m flake8 backend tests --max-line-length=120 || exit 1

# Backend mypy
echo "ğŸ Backend mypy..."
./venv/bin/python -m mypy backend/ || exit 1

echo "âœ… All checks passed!"
