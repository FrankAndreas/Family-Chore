{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Backend: Lint (flake8)",
            "type": "shell",
            "command": "./venv/bin/python -m flake8 backend tests --max-line-length=120",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Backend: Type Check (mypy)",
            "type": "shell",
            "command": "./venv/bin/python -m mypy backend/",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Backend: Tests (pytest)",
            "type": "shell",
            "command": "export PYTHONPATH=${workspaceFolder} && ./venv/bin/pytest tests/ -v",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Frontend: Lint (ESLint)",
            "type": "shell",
            "command": "npm run lint",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Frontend: Type Check (TypeScript)",
            "type": "shell",
            "command": "npx tsc --noEmit",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Frontend: Build",
            "type": "shell",
            "command": "npm run build",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "ðŸš€ Full Pre-Commit Check",
            "dependsOn": [
                "Backend: Lint (flake8)",
                "Backend: Type Check (mypy)",
                "Backend: Tests (pytest)",
                "Frontend: Lint (ESLint)",
                "Frontend: Type Check (TypeScript)"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Fix Python Format (autopep8)",
            "type": "shell",
            "command": "./venv/bin/pip install autopep8 && ./venv/bin/autopep8 --in-place --recursive --max-line-length 120 backend tests",
            "problemMatcher": []
        }
    ]
}